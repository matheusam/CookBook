<h1><%= @recipe.title %></h1>
<% if @recipe.spotlight %>
  <%= image_tag 'star.png', class:'spotlight'%>
  <p>Receita em destaque</p>
<% end %>
<h3>Detalhes</h3>
<% if @recipe.photo.attached? %>
  <%= image_tag @recipe.photo, class:'recipe' %>
<% else %>
  <%= image_tag 'default_recipe.jpeg', class:'recipe'%>
<% end %>
<p><%= @recipe.recipe_type.name %></p>
<p><%= @recipe.cuisine.name %></p>
<p><%= @recipe.difficulty %></p>
<p><%= @recipe.cook_time_min %></p>
<h3>Ingredientes</h3>
<p><%= @recipe.ingredients %></p>
<h3>Como Preparar</h3>
<p><%= @recipe.cook_method %></p>
<h3>Autor da receita</h3>
<p><%= link_to @recipe.user.email, user_path(@recipe.user) %></p>

<%= link_to 'Voltar', root_path, class: 'btn btn-secondary' %>
<% if user_signed_in? && @same_user %>
  <%= link_to 'Editar', edit_recipe_path(@recipe), class: 'btn btn-primary' %>
  <%= link_to 'Deletar', @recipe, method: :delete, data: {confirm: 'Deseja apagar essa receita?'} , class: 'btn btn-warning' %>
  <!-- if user admin? -->
  <%= link_to 'Marcar como destaque', spotlight_recipes_path(@recipe), class: 'btn btn-primary' %>
<% end %>
