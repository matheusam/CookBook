<% if @recipe_type.errors.any? %>
  <p><%= @recipe_type.errors[:name] %></p>
<% end %>

<%= form_with model: @recipe_type, local:true, class: 'mt-4' do |f| %>
  <div class="form-group">
  <%= f.label :name, 'Renomear' %>
  <%= f.text_field :name, class: 'form-control col-md-6' %>
  </div>
  <%= f.submit 'Salvar', class: 'btn btn-primary' %>
<% end %>
<hr>
<%= link_to 'Voltar', root_path, class: 'btn btn-secondary' %>
